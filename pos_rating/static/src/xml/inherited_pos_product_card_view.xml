<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[@class='product-information-tag']" position="before">
            <span class="product-rating" t-out="'&#9733;'.repeat(props.productRating)+'&#9734;'.repeat(5-props.productRating)"/>
        </xpath>
    </t>
</templates>
